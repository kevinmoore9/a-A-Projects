<h1>Add New Track</h1>
<form action="<%= tracks_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%=form_authenticity_token%>">

  <label for="name">Track Name:</label>
  <input
    type="text"
    name="track[name]"
    id="name"
    value="<%=@track.name%>"><br>


<label for="album_id">Album</label>
  <select name="track[album_id]" id="album_id">
    <option></option>

    <% Album.find_by(id: params[:album_id]).band.albums.each do |album| %>
    <% selected = Album.find_by(id: params[:album_id]) %>
      <option value="<%= album.id %>">
        <%= album.name %>
      </option>
    <% end %>
  </select><br>

  <label for="ord">Track Number</label>
  <input type="integer" name="track[ord]" value="<%=@track.ord%>"><br>

  <label for="bonus">Bonus Track?</label><br>
  <input type="radio" name="track[bonus]" value="<%=@track.bonus%>">Bonus<br>
  <input type="radio" name="track[bonus]" value="<%=@track.bonus%>" checked >Standard<br>

  <label for="lyrics">Lyrics</label><br>
  <textarea name="track[lyrics]" id="lyrics" rows="8" cols="80"></textarea>

  <input type="submit">
</form>
